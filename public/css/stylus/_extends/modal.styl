.Component__modal
  trans_1(.5s)
  opacity 1
  .modal-overlay
    display block
    position fixed
    width 100%
    height 100%
    background #0f0913
    opacity .95
    z-index $z-index_high - 1
    top 0
    trans_outTurn(.2s)

  .modal-body
    position fixed
    z-index $z-index_high
    top 45%
    left 50%
    margin-top -22.5%
    margin-left -25%
    background #fff
    trans_outTurn(.8s)
    min-width 400px
    min-height 300px
    border-radius $radius_basic

  &.modal-enter, &.modal-leave
    opacity 0
    .modal-overlay
      opacity 0
    .modal-body
      opacity 0
      transform translateY(-20px)
      border-radius 0
  